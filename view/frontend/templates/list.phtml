<?php $collection = $block->getVideoCollection(); ?>
<?php if($collection->count() > 0): ?>
    <?php if ($block->getPagerHtml()): ?>
        <div class="order-products-toolbar toolbar bottom"><?php echo $block->getPagerHtml(); ?></div>
    <?php endif ?>
    <table class="data table" id="video-data-table">
        <caption class="table-caption">Webcreta Video Data</caption>
        <thead>
            <tr>
                <th scope="col" class="col title">Title</th>
                <th scope="col" class="col description">Description</th>
                <th scope="col" class="col image">Image</th>
                <th scope="col" class="col start_date">Start Date</th>
                <th scope="col" class="col end_date">End Date</th>
                <th scope="col" class="col actions">Action</th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($collection as $key => $data): ?>
                <tr>
                    <td data-th="Title" class="col title"><?php echo $data->getTitle(); ?></td>
                    <td data-th="Description" class="col description"><?php echo $data->getDescription(); ?></td>
                    <td data-th="Image" class="col image">
                        <?php if($data->getImage()): ?>
                            <img width="70" height="70" src="<?php echo $block->getBaseUrl().'pub/media/'.$data->getImage(); ?>">
                        <?php else: ?>
                            <p>No Image</p>
                        <?php endif; ?>
                    </td>
                    <td data-th="Start Date" class="col start_date"><?php echo $data->getStartDate(); ?></td>
                    <td data-th="End Date" class="col end_date"><?php echo $data->getEndDate(); ?></td>
                    <td data-th="Actions" class="col actions">
                        <?php $id = $block->getProductUrlKey($data->getProductId()); ?>
                        <button>
                        <a href="<?php echo $id; ?>" class="action view">
                            <span>Subscribe</span>
                        </a>
                        </button>
                    </td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
    <?php if ($block->getPagerHtml()): ?>
        <div class="order-products-toolbar toolbar bottom"><?php echo $block->getPagerHtml(); ?></div>
    <?php endif ?>
<?php else: ?>
    <h2>We couldn't find any records</h2>
<?php endif; ?>